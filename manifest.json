{
  "manifest_version": 3,
  "name": "Elden Virustotal",
  "version": "1.0.0",
  "description": "Shows an Elden Ring banner when youre on VT",
  "permissions": ["storage"],
   "action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "48": "src/assets/icon.png"
      }
   },
    "host_permissions": [
      "https://virustotal.com/*",
	      "https://www.virustotal.com/*"
    ],
  "content_scripts": [
    {
      "matches": [
	      "https://virustotal.com/*",
	      "https://www.virustotal.com/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/style.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "48": "src/assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "src/assets/*"],
      "matches": [
	      "https://virustotal.com/*",
	      "https://www.virustotal.com/*"
      ]
    }
  ]
}
